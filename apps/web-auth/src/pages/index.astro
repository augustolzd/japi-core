---
import * as jose from 'jose';

const JWT_SECRET = new TextEncoder().encode(process.env.JWT_SECRET || 'auth-service-secret-key');
const token = Astro.cookies.get('japi_token')?.value;

let user = null;
if (token) {
  try {
    const { payload } = await jose.jwtVerify(token, JWT_SECRET);
    user = payload;
  } catch (_e) {
    Astro.cookies.delete('japi_token', { path: '/' });
  }
}
---

<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Japi Identity Portal</title>
</head>
<body class="japi-body">
  <main class="page-container">
    <header class="header">
      <h1 class="logo">Japi Identity</h1>
      {user && (
        <div class="user-chip">
          <span>{user.email}</span>
          <a href="/logout" class="logout-btn">Salir</a>
        </div>
      )}
    </header>

    <div class="launcher-grid">
      {!user ? (
        <div class="auth-box">
          <h2>Bienvenido</h2>
          <p>Para acceder al ecosistema Japi, por favor inicia sesión.</p>
          <a href="/login?returnTo=http://localhost:4323" class="login-prompt">Iniciar Sesión</a>
        </div>
      ) : (
        <>
          <a href="http://localhost:4325" class="app-card iam">
            <div class="app-icon iam"></div>
            <h3>Japi Console</h3>
            <p><strong>El Cerebro:</strong> Control de accesos e IAM.</p>
          </a>

          <a href="http://localhost:4324" class="app-card billing">
            <div class="app-icon billing"></div>
            <h3>Japi Billing</h3>
            <p><strong>El Libro Contable:</strong> Finanzas y facturación.</p>
          </a>

          <a href="http://localhost:4322" class="app-card campaigns">
            <div class="app-icon campaigns"></div>
            <h3>Japi Connect</h3>
            <p><strong>La Generadora:</strong> Marketing y Campañas.</p>
          </a>

          <a href="http://localhost:4321" class="app-card admin secondary">
            <div class="app-icon infra"></div>
            <h3>Infra Console</h3>
            <p>Monitoreo técnico de sistemas.</p>
          </a>
        </>
      )}
    </div>
  </main>
</body>
</html>

