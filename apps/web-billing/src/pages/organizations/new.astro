---
import BillingLayout from '../../layouts/BillingLayout.astro';
import { CreateOrganizationForm } from '../../components/CreateOrganizationForm';
const { user } = Astro.locals;
---

<BillingLayout title="Nueva Organización" userEmail={user?.email}>
  <div class="card">
    <p class="description">
      Configura un nuevo cliente legal en la plataforma. Recuerda que debe estar vinculado a un Service Provider para la facturación.
    </p>
    <hr class="divider" />
    <CreateOrganizationForm client:load />
  </div>
</BillingLayout>

<style>
  .description {
    color: var(--japi-color-neutral-500);
    margin-bottom: 1.5rem;
  }
  .divider {
    border: 0;
    border-top: 1px solid var(--japi-color-neutral-100);
    margin-bottom: 2rem;
  }
</style>
